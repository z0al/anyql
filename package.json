{
	"name": "@z0al/ql",
	"version": "0.0.3",
	"license": "MIT",
	"author": "Ahmed T. Ali",
	"sideEffects": false,
	"main": "dist/index.js",
	"module": "dist/ql.esm.js",
	"typings": "dist/index.d.ts",
	"files": [
		"dist"
	],
	"scripts": {
		"build": "tsdx build",
		"test": "tsdx test && tsc --noEmit",
		"test:watch": "tsdx test --watch",
		"bundlesize": "npm run -s build && bundlesize",
		"prepublishOnly": "npm run -s bundlesize",
		"prepare": "npm run -s build"
	},
	"prettier": {
		"printWidth": 72,
		"semi": true,
		"singleQuote": true,
		"trailingComma": "es5",
		"useTabs": true,
		"arrowParens": "always"
	},
	"dependencies": {
		"dequal": "^1.0.0",
		"fast-safe-stringify": "^2.0.7",
		"is-observable": "^2.0.0",
		"is-plain-obj": "^2.1.0",
		"mitt": "^1.2.0",
		"tiny-invariant": "^1.1.0"
	},
	"devDependencies": {
		"@testing-library/react-hooks": "^3.2.1",
		"@types/jest": "^25.2.1",
		"@types/zen-observable": "^0.8.0",
		"bundlesize": "^0.18.0",
		"delay": "^4.3.0",
		"react": "^16.13.1",
		"react-test-renderer": "^16.13.1",
		"rxjs": "^6.5.5",
		"tsdx": "^0.13.2",
		"tslib": "^1.11.1",
		"typescript": "^3.8.3",
		"zen-observable": "^0.8.15"
	},
	"peerDependencies": {
		"react": ">=16.8.6"
	},
	"bundlesize": [
		{
			"path": "./dist/ql.cjs.production.min.js",
			"maxSize": "3 KB"
		}
	],
	"publishConfig": {
		"access": "public"
