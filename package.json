{
	"name": "oktane",
	"version": "0.0.1",
	"description": "A light-weight and customizable library for data fetching in React",
	"license": "MIT",
	"author": "Ahmed T. Ali",
	"sideEffects": false,
	"main": "dist/index.js",
	"source": "src/index.ts",
	"module": "dist/oktane.esm.js",
	"typings": "dist/index.d.ts",
	"keywords": [
		"react",
		"query",
		"oktane",
		"mutation",
		"subscription"
	],
	"repository": "z0al/oktane",
	"files": [
		"dist"
	],
	"scripts": {
		"build": "tsdx build",
		"lint": "tsdx lint src",
		"test": "tsdx test",
		"test:watch": "tsdx test --watch",
		"typecheck": "tsc --noEmit",
		"bundlesize": "npm run -s build && bundlesize",
		"prepublishOnly": "npm run -s bundlesize && npm run -s lint && npm run -s typecheck",
		"prepare": "npm run -s build"
	},
	"prettier": {
		"printWidth": 72,
		"semi": true,
		"singleQuote": true,
		"trailingComma": "es5",
		"useTabs": true,
		"arrowParens": "always"
	},
	"dependencies": {
		"dequal": "^1.0.0",
		"mitt": "^1.2.0"
	},
	"devDependencies": {
		"@testing-library/jest-dom": "^5.5.0",
		"@testing-library/react": "^10.0.2",
		"@testing-library/react-hooks": "^3.2.1",
		"@types/jest": "^25.2.1",
		"@types/zen-observable": "^0.8.0",
		"bundlesize": "^0.18.0",
		"delay": "^4.3.0",
		"jest-environment-jsdom-fifteen": "^1.0.2",
		"react": "^16.13.1",
		"react-dom": "^16.13.1",
		"react-test-renderer": "^16.13.1",
		"rxjs": "^6.5.5",
		"tsdx": "^0.13.2",
		"tslib": "^1.11.1",
		"typescript": "^3.8.3",
		"zen-observable": "^0.8.15"
	},
	"peerDependencies": {
		"react": ">=16.8.6"
	},
	"jest": {
		"testEnvironment": "jest-environment-jsdom-fifteen",
		"setupFilesAfterEnv": [
			"./jest.setup.js"
		]
	},
	"bundlesize": [
		{
			"path": "./dist/oktane.cjs.production.min.js",
			"maxSize": "3 KB"
		}
	],
	"publishConfig": {
		"access": "public"
	},
	"engines": {
		"node": ">=10"
	}
}
